{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "target": "es2018",
    "baseUrl": "src/",
    "allowJs": true,
    "sourceMap": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*"
  ]
}